<div class= "container">
{{#each user.blogs as |blog|}}
<a href="/edit/{{blog.id}}" class = 'blogDemo'>
    <div class = 'demoTitle'>
        <h2>{{blog.blogName}}</h2>
        <p>{{user.userName}}</p>
    </div>
    <p>{{blog.content}}</p>
</a>   
{{#each blog.comments as |comment|}}
<div class = 'commentCard'>
    <p>{{comment.comment}}</p>
    <p> - {{comment.user.userName}}</p>
</div>
{{/each}} 
{{/each}}
<a class = "createBtn" href="/create/">+ New Post</a>
</div>